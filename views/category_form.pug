extends layout

block content 
    h1=title
    form(method='POST' action='')
        .form-group 
            label(for='name') Category Name: 
            input#name.form-control(type='text' name='name' value=(undefined=== category?'': category.name))

        .form-group 
            label(for='description') Description: 
            input#category.form-control(type='text' name='description' value=(undefined=== category?'': category.description) )

        button#submit.btn.btn-primary(type='submit' ) Submit

    if errors  
        ul 
            for error in errors 
                li!=error.msg