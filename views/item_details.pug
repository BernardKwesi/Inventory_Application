extends layout 

block content 
    

    h1=title

    div 
        h3 Item Name: #{item.name}
       
        p Description: #{item.description}
        p Price: #{item.price}
        p in Stock:#{item.number_in_stock}

        p 
            a(href=item.category.url) #{item.category.name} 
        hr
    p 
        a(href=item.url+'/delete')  Delete Item 
    p 
        a(href=item.url+'/update')  Update Item        