extends layout 

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='name') Item Name: 
            input#name.form-control(type='text' name='name' placeholder='Item Name' required='true' value=(undefined===item? '' : item.name))
        
        div.form-group
            label(for='description') Description: 
            input#description.form-control(type='text' name='description' placeholder='Item Description ....' required='true' value=(undefined=== item ? '':item.description) )

        div.form-group
            label(for='category') Category: 
            select#category.form-select(name="category" value='category')
                for category in categories
                    if item
                        option(value=category._id selected=(item.category.name == category.name ? 'selected' :false ))  #{category.name}
                    else 
                        option(value=category._id )  #{category.name}
                   
        div.form-group
            label(for='price') Price: 
            input#price.form-control(type="number" name='price' value=(undefined===item ?'':item.price) )

        div.form-group
            label(for='number_in_stock') Number in Stock: 
            input#number_in_stock.form-control(type="number" name="number_in_stock" value=(undefined===item ?'':item.number_in_stock) )         

        button#submit.btn.btn-primary(type='submit' ) Submit    

    if errors 
        ul
            for error in errors 
                li!=error.msg